{
  "extends": "defaults/configurations/google",

  "env": {
    "browser": true
  },

  "globals": {
    "require": true,
    "$": true,
    "hexo": true,
    "smoothScroll": true
  },

  "rules": {
    "max-len": [1, 120, 4],
    "no-invalid-this": 0,
    "dot-location": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }]
  }
}
