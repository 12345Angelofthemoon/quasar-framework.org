  <div class="inner">
    <ul id="nav">
      <%- partial('partials/main_menu') %>
    </ul>
    <div id="logo-wrap">
      <img id="logo" src="<%- config.root %>images/quasar-logo.png">
      <h1>Quasar Framework</h1>
    </div>
    <p class="desc">
      Build desktop/mobile websites & phone/tablet apps simultaneously.
