<%
  var previousPage = previous_page(page);
  var nextPage     = next_page(page);
%>

<div class="qwb-content">

  <a
    class="qwb-edit-page-btn"
    href="https://github.com/quasarframework/quasar-site/edit/dev/source/<%- page.source %>"
    target="_blank"
  >
    <i class="fa fa-pencil"></i>
  </a>

  <div class="qwb-headnote">
    <i class="fa fa-calendar"></i>
    Last updated: <%- (new Date(page.updated)).toDateString() %>
  </div>

  <h1><%- page.title %></h1>

  <%- page.content %>

  <% if (page.title === 'Stylus Variables') { %>
    <input
      id="search-variable"
      type="text"
      placeholder="Loading Stylus Variables..."
      disabled="disabled"
    >

    <table style="margin-top: 20px; width: 100%;">
      <thead>
        <tr>
            <th>Stylus Variable Name</th>
            <th>Material Default Value</th>
            <th>iOS Default Value</th>
        </tr>
      </thead>

      <tbody id="search-results">
        <tr id="search-loading" style="text-align: center;">
          <td colspan="3">
            <img src="/images/spinner.gif">
          </td>
        </tr>
      </tbody>
    </table>
  <% } %>

  <div class="qwb-guide-links">
    <% if (previousPage) { %>
      <span><a href="<%- url_for(previousPage.path) %>"><i class="fa fa-chevron-left"></i> <%- previousPage.title %></a></span>
    <% } %>
    <% if (nextPage) { %>
      <span style="float:right"><a href="<%- url_for(nextPage.path) %>"><%- nextPage.title %> <i class="fa fa-chevron-right"></i></a></span>
    <% } %>
  </div>

  <div class="qwb-footnote">
    <p>
      Caught a mistake or want to contribute to the documentation?
      <br/>
      <a href="https://github.com/quasarframework/quasar-site/edit/dev/source/<%- page.source %>" target="_blank">
        Suggest an edit on GitHub
        <i class="fa fa-pencil"></i>
      </a>
    </p>
    <p>
      Have you found this page useful?
      <br/>
      <a
        href="<%- config.root %>support-quasar-framework.html"
        title="Donate"
      >
        Please, support us!
        <i class="fa fa-thumbs-up"></i>
      </a>
    </p>
  </div>
</div>
