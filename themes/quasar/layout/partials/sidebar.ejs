<div class="sidebar-backdrop"></div>

<div class="qwb-sidebar inverted">
  <a
    class="qwb-logo"
    href="<%- config.root %>"
    title="v<%- latest_quasar_version() %>"
  >
    <img
    width="32" height="32" src="https://cdn.rawgit.com/quasarframework/quasar-art/4a472070/dist/svg/quasar-logo-gradient.svg"/>
    <strong>Quasar Framework</strong>
    <em>v<%- latest_quasar_version() %></em>
  </a>
  <div class="qwb-menu simple centered fluid">
    <a href="<%- config.root %>search/" title="Search">
      <i class="fa fa-search"></i>
    </a>
    <%- partial('partials/social-links') %>
  </div>
  <!--<input
    type="text"
    title="Search"
    placeholder="Search..."
    class="qwb-search-input"
  />-->
  <div class="qwb-accordion">
    <% for (section in site.data.pageMenu) { %>
    <h4
      class="qwb-toggle on"
      href="<%- config.root %><%- section %>/"
    >
      <%- section %>
      <i class="fa fa-chevron-down"></i>
    </h4>
    <div class="list">
      <% for (category in site.data.pageMenu[section]) { %>
      <% if (category !== 'root') { %>
      <h5><%- category %></h5>
      <% } %>
      <ul>
        <% for (name in site.data.pageMenu[section][category]) {
            var
              html = site.data.pageMenu[section][category][name]
              path = page_path_from_menu(section, html, name),
              p = site.pages.find({ path: path })
            ;
        %>
        <li>
          <a
            href="<%- config.root + path %>"
            class="<%- page.path === path ? 'current' : '' %>"
          >
            <%- name %>
          </a>
        </li>
        <% } %>
      </ul>
    <% } %>
    </div>
  <% } %>
  </div>
</div>
