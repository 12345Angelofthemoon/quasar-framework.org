.docs
  position absolute
  opacity 1
  width 50%
  height auto
  left 50%
  top 50%
  transform translate(-50%, -50%)

.qwb-responsive
  .device
    opacity 0
    animation-name device-fade-in-out
    animation-duration 8s
    animation-iteration-count infinite
  .desktop
    width 80%
    top 68%
    animation-delay 0s
  .laptop
    width 70%
    top 52%
    animation-delay 2s
  .tablet
    width 30%
    animation-delay 4s
  .mobile
    width 20%
    animation-delay 6s
  .logo
    width 35%
    animation logo-resize 8s linear infinite

.qwb-play
  .qrcode
    animation qrcode-fade-in linear 8s infinite
  .play
    animation play-fade-out linear 8s infinite
  .logo
    animation logo-fade-in linear 8s infinite
  .mobile
    animation mobile-scan linear 8s infinite
  .laptop
    top 52%
    width 60%
    animation laptop-fade-out linear 8s infinite

.qwb-js-vue
  .jslogo
    animation jslogo-rotate linear 4s infinite
  .vuelogo
    animation vuelogo-rotate linear 4s infinite

.qwb-boilerplate
  .rocket
    width 35%

.qwb-speed
  .needle
    width 5%
    transform-origin 49% 73.8%
    transform translate(-50%, -74%) rotateZ(45deg)

.qwb-platforms
  .androidlogo
  .applelogo
  .winlogo
    opacity 0
    left 80%
    animation logo-slide-in-out ease 6s infinite
  .androidlogo
    animation-delay 0s
  .applelogo
    animation-delay 2s
  .winlogo
    animation-delay 4s

.qwb-hot-reload
  .mobile
    width 20%
    top 65%
    left 25%
  .mobile+.logo
    width 15%
    top 52%
    left 17.5%
  .desktop
    width 50%
  .desktop+.logo
    width 20%
    top 24%
    left 40%
  .cup
    width 30%
    top 85%
    left 75%
  .smoke
    width 10%
    left 75%
    animation smoke 4s infinite
  .logo
    animation rotate-clockwise 30s linear infinite
