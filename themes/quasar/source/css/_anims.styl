.animated
  animation-duration 1s
  animation-fill-mode both
  transform-origin 50%

.animated.infinite
  animation-iteration-count infinite

@keyframes rotate-clockwise
  from
    transform rotateZ(0deg)
  to
    transform rotateZ(360deg)

@keyframes logo-resize
  0%, 25%
    width 35%
  35%, 50%
    width 25%
  60%, 75%
    width 15%
  85%, 90%
    width 10%

@keyframes device-fade-in-out
  0%
    opacity 0
  25%
    opacity 1
  35%
    opacity 0

@keyframes play-fade-out
  0%, 5%, 15%, 100%
    width 25%
    opacity 1
  10%
    width 30%
    opacity 1
  20%, 95%
    opacity 0

@keyframes laptop-fade-out
  0%, 15%
    left 50%
    opacity 0
  30%, 40%
    left 50%
    opacity 1
  45%, 100%
    left 0
    opacity 0

@keyframes qrcode-fade-in
  0%, 20%, 90%, 100%
    width 20%
    opacity 0
  35%, 45%
    width 20%
    opacity 1
  50%
    width 10%
    opacity 1
  55%
    width 10%
    opacity 0

@keyframes mobile-scan
  0%, 30%
    top 100%
    left 100%
    width 10%
    opacity 0
  40%, 65%
    width 30%
    top 50%
    left 50%
    opacity 1
  70%, 100%
    width 30%
    opacity 0

@keyframes logo-fade-in
  0%, 50%
    width 5%
    height auto
    opacity 0
  55%, 70%
    width 20%
    height auto
    opacity 1
  90%
    width 50%
    height auto
    opacity 1
  100%
    width 50%
    height auto
    opacity 0

@keyframes vuelogo-rotate
  0%
    opacity 1
  25%
    opacity 1
  26%
    opacity 0
  50%
    opacity 0
  75%
    opacity 0
  100%
    opacity 1

@keyframes jslogo-rotate
  0%
    opacity 0
  25%
    opacity 0
  50%
    opacity 1
  75%
    opacity 1
  76%
    opacity 0
  100%
    opacity 0

@keyframes logo-slide-in-out
  0%
    left 80%
    opacity 0
    width 20%
  33%
    left 50%
    opacity 1
    width 50%
  66%, 100%
    left 20%
    opacity 0
    width 20%

@keyframes smoke
  0%, 33%, 100%
    opacity 0
    top 55%
  66%
    opacity 1
  99%
    opacity 0
    top 50%

