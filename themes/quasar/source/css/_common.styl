@import "_variables"
@import "_syntax"

body
    font-family $body-font
    font-size $body-font-size
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    color $medium
    margin 0

a
    text-decoration none
    color $medium
    outline 0

img
    border none

h1, h2, h3, h4, strong
    font-weight 600
    color $dark

hr
    margin 2em 0
    height 2px
    background-color #e5e5e5
    border 0
    padding 0

input
    vertical-align middle
    border 1px solid $border
    border-radius 3px
    box-shadow $shadow
    line-height 20px
    font-size 16px
    padding 12px 10px
    width 100%
    cursor pointer
    outline 0
    box-sizing border-box

code, pre
    font-family $code-font
    font-size $code-font-size
    background-color $bg
    -webkit-font-smoothing initial
    -moz-osx-font-smoothing initial

code
    color $dark
    padding 3px 5px
    margin 0 2px
    border-radius 2px
    border: 1px solid #e6e6e6
    white-space nowrap
    box-shadow 0 1px 1px rgba(0,0,0,0.125)

em
    color $light

p
    word-spacing 0.05em


@keyframes swing
    15%
        transform translateX(5px)
    30%
        transform translateX(-5px)
    50%
        transform translateX(3px)
    65%
        transform translateX(-3px)
    80%
        transform translateX(2px)
    100%
        transform translateX(0)

a.button
    display inline-block
    font-family $logo-font
    font-size 150%
    color #fff
    background-color $light
    box-shadow $shadow
    padding 12px 14px
    border-radius $radius
    transition all .15s ease
    &:hover
        background-color lighten($main, 25%)
        animation swing 1s ease
        animation-iteration-count 1

.highlight
    overflow-x auto
    position relative
    padding 0
    background-color $bg
    padding .8em
    line-height 1.1em
    border-radius $radius
    box-shadow $shadow
    table, tr, td
        width 100%
        border-collapse collapse
        padding 0
        margin 0
    .gutter
        width 1.5em
    .code
        pre
            padding 1.2em 1.4em
            line-height 1.5em
            margin 0
    &.html, &.js, &.bash, &.css, &.yaml, &.json
        .code:after
            position absolute
            top 0
            right 0
            color #ccc
            text-align right
            font-size .75em
            padding 5px 10px 0
            line-height 15px
            height 15px
            font-weight 600
    &.html .code:after
        content 'HTML'
    &.js .code:after
        content 'JS'
    &.bash .code:after
        content 'Shell'
    &.css .code:after
        content 'CSS'
    &.json .code:after
        content 'JSON'
    &.yaml .code:after
        content 'YAML'

#main
    position relative
    z-index 1
    padding 0 10px 30px 60px
    overflow-x hidden
