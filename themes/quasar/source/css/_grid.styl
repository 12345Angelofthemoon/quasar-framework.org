@import '_variables'


/* Base */

html, body
  margin 0
  padding 0


/* Grid (based on Flexbox) */

.qwb-container
  position relative
  display flex
  flex-direction column
  box-sizing border-box
  width 100%
  height 100%
  padding 0 1rem
  margin 0 auto

  &.xs
    display flex
    max-width $xs

  &.sm
    display flex
    max-width $sm

  &.md
    display flex
    max-width $md

  &.lg
    display flex
    max-width $lg

  &.xl
    display flex
    max-width $xl

.qwb-row
  position relative
  display flex
  flex-flow column
  justify-content space-between
  box-sizing border-box
  margin 0 -1rem
  height 100%

.qwb-item
  position relative
  display flex
  flex-direction column
  flex 1

  &.fluid
    max-width 100%

  &.half
    max-width 50%

  &.third
    max-width 33.33%

  &.fourth
    max-width 25%

  &.fifth
    max-width 20%

  &.tenth
    max-width 10%


/* Responsive */

@media (min-width: $xs)

  .qwb-row.xs
    flex-flow row

@media (min-width: $sm)

  .qwb-row:not(.md, .lg, .xl)
    flex-flow row

  .only.xs:not(.sm)
    display none

@media (min-width: $md)

  .qwb-row:not(.lg, .xl)
    flex-flow row

  .only.sm:not(.md)
    display none

@media (min-width: $lg)

  .qwb-row:not(.xl)
    flex-flow row

  .only.md:not(.lg)
    display none

@media (min-width: $xl)

  .qwb-row.xl
    flex-flow row

  .only.lg:not(.xl)
    display none


@media (max-width: $xs)
  .sm:not(.xs), .md:not(.xs), .lg:not(.xs), .xl:not(.xs)
    display none

@media (max-width: $sm)

  .only.sm:not(.xs)
    display none

  .md:not(.sm), .lg:not(.sm), .xl:not(.sm)
    display none

@media (max-width: $md)

  .only.md:not(.sm)
    display none

  .lg:not(.md), .xl:not(.md)
    display none

@media (max-width: $lg)

  .only.lg:not(.md)
    display none

  .xl:not(.lg)
    display none

@media (max-width: $xl)

  .only.xl:not(.lg)
    display none
