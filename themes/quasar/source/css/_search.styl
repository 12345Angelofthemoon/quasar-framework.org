@import '_variables'
@import '_mixins'

.content.search
  margin-left 20px
  h1
    margin 0 0 .5em
  ul
    list-style-type none
    padding-left 0
    p.search-result
      margin-top 0
    li
      margin .5em 0 .5em
      border-bottom 1px solid $border-color
      border-radius $border-radius
      padding 10px
      &:hover
        background-color #EEE // @stylint ignore
      a.search-result-title
        font-weight bold
        font-size 16px
      a.search-result
        font-weight 400

#search-content
  display none

@media screen and (max-width $small-screen)
  .content.search
    margin-left 0

@media screen and (min-width $small-screen + 1px)
  body.search .sidebar
    display none
