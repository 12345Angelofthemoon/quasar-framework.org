@import '_palette'
@import 'https://fonts.googleapis.com/css?family=Open+Sans:400,600,700&subset=latin-ext'


/* Text */

$open-sans  = 'Open Sans', sans-serif

$base-font-family = $open-sans
$base-font-size = 16px
$base-font-weight = 400
$bold-font-weight = 700
$base-font-scale = 1.333
$base-line-height = 1.56
$base-letter-spacing = initial

$header-font-family = $open-sans
$header-font-weight = 600
$header-line-height = 1.2
$header-bottom-margin = 1rem
$header-letter-spacing = initial


/* Elements */

$border-color = $secondary-text
$border-radius = 4px
$shadow = 0 2px 5px rgba(0, 0, 0, .3)
$text-shadow = 0 2px 1px rgba(0, 0, 0, .4)

$menu-min-height = 3rem
$sidebar-max-width = 280px
$sidebar-vertical-padding = 1rem
$preview-max-width = 412px


/* Responsive */

$xs = 320px
$sm = 480px
$md = 768px
$lg = 992px
$xl = 1200px
