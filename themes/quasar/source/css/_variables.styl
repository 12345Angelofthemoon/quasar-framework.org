@import '_palette'

$source-sans-pro  = 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif

$base-font-size = 16px
$base-font-family = $source-sans-pro
$base-line-height = 1.5
$base-font-weight = 300
$base-letter-spacing = initial

$header-font-family = $source-sans-pro
$header-line-height = 1.2
$header-font-weight = 400
$header-letter-spacing = initial

$border-color = $normal-text
$border-radius = 6px
$shadow = 0 2px rgba(0, 0, 0, .2)
