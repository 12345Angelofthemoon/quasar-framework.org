@import '_typography'
@import '_grid'
@import '_elements'
@import '_anims'


.playstore
  display inline-block
  width 100%
  img
    display block
    width 200px
    margin 0 auto

img.arrow
  width 1.5rem
  margin 2rem auto 0


#qwb-logo
  width 6rem
  height 6rem
  margin 0 auto
  box-sizing border-box
  background-color #fff
  box-shadow $shadow
  border-radius 50%
  animation-duration 2s


#qwb-intro
  font-size 1.2em
  h1
    margin-top 1rem
    font-size 2em
    line-height 1.4em
  h2
    font-size 1.3em
  p
    max-width 13em
    margin 2rem auto
  p+p
    margin-top 0


#qwb-body
  padding 2rem


#qwb-actions
  .qwb-item
    margin-bottom 2rem
    p
      max-width 72%
      box-sizing border-box
      text-align center
      margin-left auto
      margin-right auto
    .qwb-btn
      margin-bottom 2rem


#qwb-footer
  margin 2rem 0
  text-align center
  box-sizing border-box


@media only screen and (min-width 48rem)

  #qwb-logo
    width 10rem
    height 10rem
    margin-top 2rem
    margin-bottom 2rem


  #qwb-intro
    h1
      font-size 4.0em
    h2
      font-size 2.6em
    p
      max-width 28em


  #qwb-actions
    .qwb-item
      margin-bottom 0
      p
        margin-bottom 6em
      .qwb-btn
        position absolute
        width 40%
        left 50%
        bottom 0
        transform translate(-50%, 0)
