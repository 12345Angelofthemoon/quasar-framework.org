@import "_common"

zoom(n)
    transform scale(n)

html, body
    height 100%

#nav
    list-style-type none
    text-align center
    padding 0
    li
        display inline-block
        &:last-child .nav-link
            margin-right 0

.nav-link
    color $dark
    padding-bottom 3px
    margin 0 1.5em
    &:first-child
        margin-left 0
    &:hover, &.current
        border-bottom 3px solid $main

#logo
    display block
    margin 0 auto
    width 200px

#logo-wrap
    margin 4em 0

#hero
    text-align center
    height 100%
    min-height 720px
    position relative
    .inner
        height 640px
        width 100%
        position absolute
        top 50%
        margin-top -340px
        left 0
    h1
        font-family $logo-font
        font-weight 300
        font-size 4em
        margin 0
    .warning
        color $medium
    .desc
        max-width 800px
        padding 0 20px
        text-align center
        margin 1em auto
        color $medium
        i
            font-size 3em
            color $main
            padding 10px
    .down
        position absolute
        bottom 0
        width 100%
        left 0
        padding 1.5em 0
        img
            width 20px
    a.button
        width 300px
        margin .5em

#features
    padding 5em 0 5em 0
    border-top 1px solid #eee
    text-align center
    background: #e3e3e3 url(../images/features-delimiter.gif) top repeat-x
    .feat .icon
        text-align center
        display inline-block
        vertical-align middle
        position relative
        top 20px
        left -5px
        width 40px
        height 40px
        font-size 40px
        margin-right 10px
        float left
    .feats
        max-width 1200px
        margin 0 auto
    .feat
        box-sizing border-box
        -moz-box-sizing border-box
        display inline-block
        text-align left
        vertical-align top
        width 285px
        margin 40px
        h2
            color $medium
            line-height 40px
            margin-bottom 0
        p
            color lighten($medium, 30%)
            padding-left 52px
            margin .4em 0

#footer
    text-align center
    color #fff
    padding 7em 0 4em 0
    background $main url(../images/footer-delimiter.gif) top repeat-x
    .avatar
        width 100px
        border-radius 100%
        margin 2.5em 0 1em
    a
        color #fff
        text-decoration underline
        &.start
            font-size 1.2em
            text-decoration none
            text-transform uppercase
            letter-spacing 1px
            border 1px solid #fff
            display inline-block
            padding 12px 20px
            transition all .15s ease
            margin-bottom 2em
            &:hover
                background-color #fff
                color #7f8c8d
                border-radius 10px
                zoom(1.35)
    p
        margin .3em 0

#main
    display none

@media screen and (max-width: 480px)
    body
        font-size 14px
    #nav
        margin 3em 1.8em 0
    #logo-wrap
        margin 2em 0
    #logo
        width 120px
    .nav-link
        font-size .85em
        margin 0 .5em
    .divider
        font-size 1.2em
        margin 2.5em 1em
    #hero
        min-height 560px
        .inner
            height 600px
            margin-top -300px
        h1
            font-size 2em
            font-weight 400
        .buttons
            max-width 300px
            margin 1em auto
        a.button
            width 260px
            font-size .8em
            margin .5em 0
        .desc
            max-width 300px
        .warning, .desc
            font-size .85em
            margin 1em auto
            br
                display none
        .down
            display none
    #features
        padding 2em 0 2em 0
        .feat
            font-size 14px
            margin .8em 0
            width 255px

@media screen and (max-width: 860px)
    #features, #hero
        font-size 16px
