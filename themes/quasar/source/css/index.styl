@import '_variables'
@import '_typography'
@import '_grid'
@import '_elements'
@import '_anims'


img.arrow
  width 1.5rem
  margin 2rem auto 0


#qwb-logo
  width 7rem
  height 7rem
  margin 0 auto
  box-sizing border-box
  background-color #fff
  box-shadow $shadow
  border-radius 50%
  animation-timing-function linear
  animation-duration 30s


#qwb-intro
  padding-top 3rem
  font-size 1.2em
  h1
    margin-top 1rem
  p
    max-width 34rem


#qwb-actions
  .qwb-item
    margin-bottom 2rem
    p
      max-width 80%
      box-sizing border-box
      text-align center
      margin-left auto
      margin-right auto
    .qwb-btn
      margin-bottom 2rem


#qwb-footer
  margin 2rem 0
  text-align center
  box-sizing border-box


@media only screen and (min-width $sm)

  #qwb-logo
    width 10rem
    height 10rem


@media only screen and (min-width $md)

  #qwb-logo
    margin-top 2rem


  #qwb-actions
    .qwb-item
      margin-bottom 0
      padding-bottom 4rem
      .qwb-btn
        position absolute
        width 180px
        left 0
        right 0
        bottom 0
        margin-left auto
        margin-right auto
