@import '_variables'
@import '_typography'
@import '_grid'
@import '_elements'
@import '_anims'


img.arrow
  width 1.5rem
  margin 2rem auto 0


#qwb-logo
  width 6rem
  height 6rem
  margin 0 auto
  box-sizing border-box
  background-color #fff
  box-shadow $shadow
  border-radius 50%
  animation-timing-function linear
  animation-duration 30s


#qwb-intro
  font-size 1.2em
  h1
    margin-top 1rem
  p
    max-width 34rem


#qwb-actions
  .qwb-item
    margin-bottom 2rem
    p
      max-width 72%
      box-sizing border-box
      text-align center
      margin-left auto
      margin-right auto
    .qwb-btn
      margin-bottom 2rem


#qwb-footer
  margin 2rem 0
  text-align center
  box-sizing border-box


@media only screen and (min-width $md)

  #qwb-logo
    width 10rem
    height 10rem
    margin-top 2rem
    margin-bottom 2rem


  #qwb-actions
    .qwb-item
      margin-bottom 0
      p:last-of-type
        margin-bottom 6em
      .qwb-btn
        position absolute
        width 50%
        left 50%
        bottom 0
        transform translate(-50%, 0)
