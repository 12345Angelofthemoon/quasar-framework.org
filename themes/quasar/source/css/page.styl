@import "_common"
@import "_blog"
@import "_search"

$header-height = 80px
$header-color = white
$header-padding = 25px
$header-bg = #0273D4
$header-shadow = 0 4px 5px 0 rgba(0,0,0,0.14), 0 1px 10px 0 rgba(0,0,0,0.12), 0 2px 4px -1px rgba(0,0,0,0.4)

#header
    background-color $header-bg
    box-shadow $header-shadow
    height $header-height
    z-index 100

#logo
    display inline-block
    font-size 1.7em
    line-height $header-height
    color $header-color
    font-family $logo-font
    font-weight 500
    margin-left 25px
    img
        vertical-align top
        margin-right 6px
        width $header-height
        height $header-height

#nav
    list-style-type none
    margin 0
    padding 0
    position absolute
    left 352px
    top 0
    height $header-height
    line-height $header-height
    .break
        display none
    li
        display inline-block
        margin 0 .6em
    a, i
        color $header-color

.nav-link
    padding-bottom 3px
    &:hover, &.current
        border-bottom 3px solid $main

$mbar-height = 90px
#mobile-bar
    width 100%
    height $mbar-height
    background-color $header-bg
    box-shadow $header-shadow
    color $header-color
    text-align center
    display none
    .menu-button
        cursor pointer
        font-size 23px
        padding 10px
        line-height $mbar-height - 17
        color white
    .logo
        width $mbar-height - 3
        height $mbar-height - 3
        background url(../images/quasar-logo.png) center center no-repeat
        background-size $mbar-height
    .logo-text
        line-height: $mbar-height - 3
        font-family 'Dosis', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif
        font-weight 500
        font-size 23px

.sidebar
    float left
    z-index 10
    top 0
    left 60px
    width 260px
    bottom 0
    padding 2.2em 0
    margin-right 20px
    overflow-x hidden
    overflow-y auto
    -webkit-overflow-scrolling touch
    -ms-overflow-style none
    &::-webkit-scrollbar
        width: 0 !important
    h2
        margin-top .2em
        margin-bottom 7px
    h3
        margin-bottom 3px
    ul
        list-style-type none
        margin 0
        line-height 1.8em
        padding-left 1em
    .version-select
        vertical-align middle
        margin-left 5px
    .menu-root
        padding-left 0
    .menu-sub
        font-size .85em
    .sidebar-link
        color $medium
        &.current
            font-weight 900
            color $main
            font-style italic
        &:hover
            border-bottom 2px solid $main
    .section-link
        transition all 0.2s ease-in
        &.active, &:hover
            color $main
            border-left: 3px solid $main
            padding-left: 3px
        &.active
            font-weight bold
    .main-menu
        margin-bottom 20px
        display none
        padding-left 0

.content
    padding 2.2em 0
    max-width 700px
    margin 0 auto 0 300px
    ul
        padding-left 1.25em
        line-height 1.4em
        ul, p
            margin .6em 0
    a.button
        font-size .9em
        color #fff
        margin .2em 0
        width 180px
        text-align center
        padding 12px 24px
        display inline-block
        vertical-align middle
    img
        max-width 100%
    span.light
        color $light
    span.info
        font-size .85em
        display inline-block
        vertical-align middle
        width 280px
        margin-left 20px
    h1
        margin 0 0 .7em 0
    h2
        margin 2em 0 .8em
        padding-bottom .4em
        border-bottom 1px solid $border
    h3
        margin 1.3em 0 1.2em
        position relative
        &:before
            content "+"
            color $dark
            position absolute
            left -0.7em
            top -2px
            font-size 1.2em
            font-weight bold
    h2, h3, h4, h5, h6
        &:hover:after
          content " #"
          color $dark
          font-weight bold
    figure, p, ul, ol
        margin 1.2em 0
    p, ul, ol
        line-height 1.6em
    ul, ol
        padding-left 1.5em
    a:not([href^="#"]):not(.search-result)
        color $main
        font-weight 700
        padding 3px 2px
        transition all .3s ease
        border-radius $radius
        &:hover:not(.button)
            color $dark
            background-color lighten($light, 70%)
    blockquote
        margin 2.5em .7em
        padding 0
        p
            padding 1.5em
            border-left 5px solid $main
            border-right 5px solid $main
            background-color $bg
            border-radius 1.3 * $radius

    iframe
        margin 1em 0
    table
      max-width 100%
      border 1px solid #eee
      border-radius 4px
      border-spacing 0
      box-shadow $shadow
      th
        font-weight bold
        border-bottom 2px solid #eee
      th, td
        padding 13px 15px
      tr
        &:nth-child(2n)
          background $bg
    figure
      table
        border 0
        box-shadow none
        th
          border-bottom 0
    .highlight pre
      padding 0

.guide-links
    margin-top 4em
    height 1em

.footer
    color $medium
    font-size .9em
    hr
        height 1px
        margin-bottom 1.5em

@media screen and (min-width: 720px)
    #main.fix-sidebar
        .sidebar
            position fixed

@media screen and (max-width: 1200px)
    .content.with-sidebar
        margin-left 280px

@media screen and (max-width: 720px)
    body
        -webkit-text-size-adjust none
        font-size 14px
    #header
        display none
    .nav-link
        padding-bottom 1px
        &:hover, &.current
            border-bottom 2px solid $main
    #mobile-bar
        display block
        z-index 0
    #main
        padding 2em 1.4em 0
        position inherit
    .highlight pre
        padding 0
    .sidebar
        position fixed
        background-color #f9f9f9
        height 100%
        top 0
        left 0
        padding 25px 30px 20px
        box-shadow 0 0 10px rgba(0,0,0,.2)
        box-sizing border-box
        transition all .4s cubic-bezier(0.4, 0, 0, 1)
        -webkit-transform translate(-280px, 0)
        transform translate(-280px, 0)
        z-index 1000
        .main-menu
            display block
        &.open
            -webkit-transform translate(0, 0)
            transform translate(0, 0)
        li
            list-style-type circle
    .content
        margin 0
        padding-top 0
    .footer
        margin-left 0
        text-align center

#toTop
    transition all 0.5s ease 0s
    opacity 0.6
    cursor pointer
    position fixed
    padding 20px
    background-color #F8F8F8
    color $main
    box-shadow $shadow
    border-radius $radius
    border 2px solid #ccc
    &:hover
        opacity: 1

    @media screen and (min-width: 720px)
        top -70px
        left 650px
        &.visible
          top -10px
        &:hover
            top 0

    @media screen and (max-width: 720px)
        right 10px
        &.visible
            bottom -5px
        bottom -70px
        right -4px
        opacity: 0.9
