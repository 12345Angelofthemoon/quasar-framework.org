@import '_variables'
@import '_typography'
@import '_grid'
@import '_elements'
@import '_syntax'
@import '_search'
@import '_sidebar'
@import '_preview'

#qwb-main
  display flex
  flex-direction column
  width 100%

  .qwb-container .qwb-row
    background-color $white


/* Sidebar */

.qwb-item.sidebar
  position fixed
  width 100%
  margin-left - $sidebar-max-width
  max-width $sidebar-max-width
  height 100%
  overflow-y auto


/* Page content */

.qwb-item.page
  min-width $xs
  max-width $lg
  background-color $white

  .qwb-content
    padding 1rem

    h1, h2
      padding-bottom $header-bottom-margin * 0.5
      border-bottom 1px dotted $divider

    h1, h2, h3, h4, h5, h6
      cursor pointer
      &:hover:after
        content ' #'
        color $primary-text
        font-weight bold

    .qwb-edit-page-btn
      float right

  .qwb-guide-links
    width 100%
    overflow auto
    margin 2rem 0


/* Mobile preview */

.qwb-item.preview
  position fixed
  flex 0
  width 100%
  height 100%
  max-width $preview-max-width
  right 0
  background-color $white


/* Responsive */

@media screen and (min-width $md)

  #qwb-main
    .qwb-container .qwb-row
      padding-left $sidebar-max-width

    .qwb-item.page .qwb-content
      padding 2rem 4rem

@media screen and (min-width $lg)

  .qwb-item.page
    margin-right $preview-max-width
